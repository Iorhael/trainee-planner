<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col"><%= t('.name') %></th>
      <th scope="col"><%= t('.category') %></th>
      <th scope="col"><%= t('.event_time') %></th>
      <th scope="col"><%= t('.reminder_time') %></th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @events.each_with_index do |event, index| %>
      <%= render partial: 'form_modal',
                          locals: { target_id: "#{dom_id(event)}", modal_type: 'edit', event: event } %>

      <%= render partial: 'event', locals: { event: event, index: index } %>
    <% end %>
  </tbody>
</table>
