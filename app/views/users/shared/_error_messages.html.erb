<% if resource.errors.any? %>
<div style="display: flex; justify-content: center;">
  <div class="alert alert-danger alert-dismissible fade show" role="alert" style="max-width: 350px;">
    <% resource.errors.full_messages.reverse_each do |message| %>
      <li style="margin-left: 10px;"><%= message %></li>
    <% end %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
</div>
<% end %>
